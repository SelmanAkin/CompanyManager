<div id="<%= dom_id leave %>">
  <p>
    <strong>Employee:</strong>
    <%= leave.employee_id %>
  </p>

  <p>
    <strong>Start date:</strong>
    <%= leave.start_date %>
  </p>

  <p>
    <strong>End date:</strong>
    <%= leave.end_date %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= leave.status.humanize.capitalize %>
  </p>

</div>
